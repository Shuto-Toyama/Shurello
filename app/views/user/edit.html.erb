<div class="usereditPage">
  <div class="container">
    <%= form_with model: @user, url: { action: :update }, html: { class: 'userForm' }, local: true do |f| %>
      <% if @user.errors.any? %>
        <p class="text-danger">ユーザー名は1～255文字以内で入力してください</p>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control userName", placeholder: "ユーザー名" %>
      <div class="text-center"><%= f.submit "名前を変更する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>
